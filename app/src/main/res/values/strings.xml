<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
    <string name="app_name">Popular Movies</string>
    <string name="detail_activity">Movie Details</string>
    <!--Display this string when there is no internet connectivity-->
    <string name="no_connection">No internet connection.</string>
    <!--Display this string when no movies are found from the API-->
    <string name="no_results">No movies found.</string>
    <!--Menu item to sort movies by popularity-->

    <string name="no_favorites">No favorite movies found.</string>

    <!--Empty string for when there is no value for something in the Movie DB-->
    <string name="empty_value">No information found.</string>

    <string name="duration_units">
        <xliff:g id="mins">%1$s</xliff:g> mins
    </string>

    <string name="trailers_label">Trailers:</string>

    <string name="trailer_tag">
        Trailer <xliff:g id="mins">%1$s</xliff:g>
    </string>

    <string name="reviews_label">Reviews:</string>

    <string name="reviewer_id_label">
        <xliff:g id="reviewer">%1$s</xliff:g> says...
    </string>

    <string name="settings_activity">Settings</string>

    <string name="action_preferences">@string/settings_activity</string>
    <string name="action_sort_favorites">View Favorites</string>
    <string name="action_sort_all">View All</string>

    <!-- Label for the sort preference -->
    <string name="pref_sort_label">Sort Order</string>

    <!-- Label for the popularity sort order preference -->
    <string name="pref_sort_label_popular">Most popular</string>
    <!-- Label for top rated sort order preference -->
    <string name="pref_sort_label_rating">Top rated</string>

    <!-- Key name for sort order preference in SharedPreferences -->
    <string name="pref_sort_key" translatable="false">sort</string>

    <!-- Value in SharedPreferences for sort by popularity option -->
    <string name="pref_sort_popular_value" translatable="false">popular?</string>
    <!-- Value in SharedPreferences for sort by ratings option -->
    <string name="pref_sort_rating_value" translatable="false">top_rated?</string>

</resources>
